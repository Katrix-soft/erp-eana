{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "target": "ES2021",
    "lib": ["ES2021"],

    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./",
    "moduleResolution": "node",

    "incremental": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist", "scripts", "prisma", "test"]
}
