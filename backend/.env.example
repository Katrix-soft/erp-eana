PORT=3000
NODE_ENV=development

# ============================================
# JWT Configuration
# ============================================
# IMPORTANTE: Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# ============================================
# Gemini AI Configuration
# ============================================
# Obtener en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ============================================
# Postgres Configuration
# ============================================
# Para desarrollo local
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=cns_db

# Para Docker (descomentar si usas docker-compose)
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=300
CACHE_ENABLED=true

# Para Docker (descomentar si usas docker-compose)
# REDIS_HOST=redis

# ============================================
# CORS Configuration
# ============================================
# Desarrollo: permitir localhost
CORS_ORIGIN=http://localhost:4200,http://localhost:8080

# Producción: especificar dominio exacto
# CORS_ORIGIN=https://tu-dominio.com,https://www.tu-dominio.com

# ============================================
# Mail Configuration
# ============================================
MAIL_HOST=smtp.office365.com
MAIL_PORT=587
MAIL_USER=notificaciones-erp@eana.com.ar
MAIL_PASS=tu_password_aquí
MAIL_DESTINATION=cns-nacional@eana.com.ar

# ============================================
# Application URL (for reset links)
# ============================================
FRONTEND_URL=http://localhost:4200
